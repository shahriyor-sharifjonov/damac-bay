mixin intro()
    section.intro#intro 
        .intro__background 
            img(src="@img/intro-bg.png", alt="" draggable="false")
        .intro__background_sm  
            img(src="@img/intro-sm.png", alt="" draggable="false")
        .intro__body.container 
            h1.intro__title PREMIUM RESIDENTIAL COMPLEX
            p.intro__p DAMAC Bay is a luxurious waterfront residence located in the heart of Dubai Harbour.
            button(type="button" data-popup="#brochure-popup").intro__btn.btn Explore more
        .intro__scroll 
            span Scroll
            <svg width="19" height="11" viewBox="0 0 19 11" fill="none" xmlns="http://www.w3.org/2000/svg">
                <path d="M0.884766 1L9.50015 9.61538L18.1155 1" stroke="#DCC39E" stroke-width="1.63077"/>
            </svg>